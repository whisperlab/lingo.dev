{
  "version": 1.7,
  "provider": {
    "id": "openai",
    "model": "gpt-4.1",
    "prompt": "Translate accurately from {source} to {target}, maintaining the original meaning.",
    "baseUrl": "https://api.openai.com/v1"
  },
  "locale": {
    "source": "en",
    "targets": ["de"]
  },
  "buckets": {
    "typescript": {
      "include": ["demo/typescript/[locale].ts"]
    }
  },
  "$schema": "./node_modules/@whisperlab/lingo.dev_spec/build/i18n.schema.json"
}
